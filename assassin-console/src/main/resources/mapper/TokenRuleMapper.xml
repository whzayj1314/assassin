<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.assassinx.assassin.console.mapper.TokenRuleMapper">

    <select id="selectTokenRulesByClientId" resultType="cn.assassinx.assassin.console.entity.TokenRule">
        SELECT
	    a.*
        FROM
	    token_rule a
	    JOIN oauth_client_details b ON a.rule_id = b.token_rule_id
	    WHERE b.client_id = #{clientId} AND a.del_flag = '0'
    </select>
</mapper>
